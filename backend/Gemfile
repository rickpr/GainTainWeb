# frozen_string_literal: true

source 'https://rubygems.org'

# Database ORM
gem 'activerecord'
# Orderable lists
gem 'acts_as_list'
# Password storage
gem 'bcrypt'
# Web protocol
gem 'grpc'
# Authentication
gem 'jwt'
# Database driver
gem 'pg'
# Crypto for JWT
gem 'rbnacl'

group(:development) { gem 'grpc-tools' }
group(:development, :test) { gem 'minitest' }
